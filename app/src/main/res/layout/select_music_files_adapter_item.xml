<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/directory_adapter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/directory_adapter_check_view"
        app:layout_constraintStart_toEndOf="@+id/directory_adapter_type"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/directory_adapter_type"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/directory_adapter_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/directory_adapter_name" />

    <CheckBox
        android:id="@+id/directory_adapter_check_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:button="@null"
        android:scaleX="0.57"
        android:scaleY="0.57"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/directory_adapter_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/directory_adapter_type" />

    <View
        android:id="@+id/directoryAdapterBottomDivider"
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/directory_adapter_name" />

    <View
        android:id="@+id/directory_adapter_mask_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/player_music_list_item_back"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>